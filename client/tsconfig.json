{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": ["config/@types", "node_modules/@types"],
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
    },
    "importHelpers": true
  },
  "exclude": ["node_modules"]
}
